  syn_bn_alu:
    filesets:
      - tool_verilator ? (files_verilator_waiver)
      - tool_ascentlint ? (files_ascentlint_waiver)
      - files_rtl_core
      - files_rtl_top
    toplevel: otbn_alu_bignum
    default_tool: icarus
    parameters:
      - SYNTHESIS=true
      - TOWARDS_KMAC=true
      - MAC_ADDER
      - ALU_ADDER
      - old_mac ? (TOWARDS_MAC=true)
      - old_adder ? (TOWARDS_ADDER=true)
      - bnmulv_ver1 ? (TOWARDS_BASE=true)
      - bnmulv_ver1 ? (BNMULV=true)
      - bnmulv_ver2 ? (BNMULV=true)
      - bnmulv_ver2 ? (BNMULV_ACCH=true)
      - bnmulv_ver3 ? (BNMULV=true)
      - bnmulv_ver3 ? (BNMULV_ACCH=true)
      - bnmulv_ver3 ? (BNMULV_COND_SUB=true)
    tools:
      vivado:
        part: "xc7k160tfbg676-1" # CW310 with K410T

  syn_bn_mac:
    filesets:
      - tool_verilator ? (files_verilator_waiver)
      - tool_ascentlint ? (files_ascentlint_waiver)
      - files_rtl_core
      - files_rtl_top
    toplevel: otbn_mac_bignum
    default_tool: icarus
    parameters:
      - SYNTHESIS=true
      - TOWARDS_KMAC=true
      - MAC_ADDER
      - ALU_ADDER
      - old_mac ? (TOWARDS_MAC=true)
      - old_adder ? (TOWARDS_ADDER=true)
      - bnmulv_ver1 ? (BNMULV=true)
      - bnmulv_ver2 ? (BNMULV=true)
      - bnmulv_ver2 ? (BNMULV_ACCH=true)
      - bnmulv_ver3 ? (BNMULV=true)
      - bnmulv_ver3 ? (BNMULV_ACCH=true)
      - bnmulv_ver3 ? (BNMULV_COND_SUB=true)
    tools:
      vivado:
        part: "xc7k160tfbg676-1" # CW310 with K410T
